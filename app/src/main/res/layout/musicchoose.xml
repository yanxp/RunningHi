<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@drawable/undermaps">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="85dp"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="@drawable/topmap">
    <Button
        android:id="@+id/back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:padding="10dp"
       android:background="@drawable/backbutton" />
        <TextView
            android:id="@+id/musicname"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/clear"
            android:layout_centerHorizontal="true"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="已选择歌单名/未选择歌单"
            android:textColor="#a4acbd"/>
    <TextView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:text="已选择歌曲"
        android:textColor="#a4acbd"
        android:textSize="20dp"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="130dp"
        android:layout_above="@+id/musicname" />

    <Button
        android:id="@+id/clear"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/deletebutton"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/back"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
        </RelativeLayout>
</LinearLayout>
      <!--<com.example.paohi.musictitle-->
          <!--android:layout_width="wrap_content"-->
          <!--android:layout_height="wrap_content"-->
          <!--android:layout_alignParentTop="true">-->
      <!--</com.example.paohi.musictitle>-->


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="62dp"
            android:background="@drawable/whitemap">
        <TextView
            android:id="@+id/bmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="BMP"
            android:textSize="20sp"
            android:textColor="#a4bdbd"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/gequming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌单名"
            android:textSize="20sp"
            android:textColor="#a4bdbd"
            android:layout_alignTop="@+id/bmp"
            android:layout_marginLeft="150dp"
              />
        <TextView
            android:id="@+id/operate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="操作"
            android:textSize="20sp"
            android:textColor="#a4bdbd"
            android:layout_marginRight="40dp"
            android:layout_alignTop="@+id/gequming"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>





        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="338dp"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="300dp">
            <ListView
                android:id="@+id/musiclist"
                android:layout_height="337dp"
                android:minHeight="300dp"
                android:layout_width="fill_parent"/>
</LinearLayout>
    </ScrollView>



        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/buttonmap"
         >
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="音乐随跑步停止而停止"
             android:textSize="20sp"
             android:textColor="#a4bdbd"
             android:layout_marginTop="30dp"
             android:layout_marginLeft="10dp"/>
            <Button
                android:layout_width="187px"
                android:layout_height="77px"
                android:id="@+id/Switch"
                android:layout_marginRight="30dp"
                android:layout_marginEnd="61dp"
                android:background="@drawable/switchbtn"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
</LinearLayout>