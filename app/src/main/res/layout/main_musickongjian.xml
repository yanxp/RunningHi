<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relative"
    android:layout_width="wrap_content"
    android:layout_height="68dp"
    android:onClick="true"
    android:focusable="true"
    android:background="@drawable/musicunder"


    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@drawable/choosedefault"
        android:id="@+id/tomusicchoose"
        android:text="选择"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="36dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:focusableInTouchMode="true"
        android:focusable="true"/>
    <TextView
        android:id="@+id/musicofchoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="已选择歌曲/未选择歌曲"
        android:textColor="#a3acbc"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/yinyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:text="音乐"
        android:textColor="#a3acbc" />
</RelativeLayout>
